---
import "../styles/global.css";

import Baselayout from "../layouts/Baselayout.astro";

const pageTitle = "About Me";

const identity = {
  firstName: "Bill",
  country: "USA",
  occupation: "Nutcase certified",
  hobbies: ["hockey", "bungie jumping without a bungie", "marbles"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];

const happy = true;
const finished = true;
const goal = 3;

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<style define:vars={{ skillColor, fontWeight, textCase }}>
  .skill {
    color: var(--skillColor);
    font-weight: var(--fontWeight);
    text-transform: var(--textCase);
  }
</style>

<Baselayout pageTitle={pageTitle}>
  <p class="author"></p>
  <p class="date"></p>
  <h2>All about Bill</h2>
  <p>Bill wrote this page.</p>
  <p>The content is sparse like Bill.</p>
  <p>Someday... not today... Bill will be interesting.</p>
  <p>Here are a few facts about me</p>
  <ul>
    <li>My name is {identity.firstName}.</li>
    <li>
      I live in {identity.country} and I work as a {identity.occupation}.
    </li>
    {
      identity.hobbies.length >= 2 && (
        <li>
          Two of my hobbies are: {identity.hobbies[1]} and {identity.hobbies[2]}
        </li>
      )
    }
  </ul>
  <p>My skills are:</p>
  <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>

  {happy && <p>I am happy to be learning Astro</p>}
  {finished && <p>I finished this tutorial</p>}
  {
    goal === 3 ? (
      <p>My goal is to finish within 3 days.</p>
    ) : (
      <p>My goal is not to finish in 3 days.</p>
    )
  }
</Baselayout>
